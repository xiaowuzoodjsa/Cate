<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:add="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    tools:context="arr.cate.contorller.activity.MainActivity">

    <RadioGroup
        add:layout_widthPercent="100%"
        add:layout_heightPercent="10%"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >
    <RadioButton
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="首页"
        android:id="@+id/home"
        android:gravity="center_horizontal"
        android:drawableTop="@drawable/home"
        android:button="@null"
        android:textColor="@drawable/textcolor"
        android:checked="true"
        />
            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="订单"
                android:id="@+id/indent"
                android:layout_toRightOf="@+id/home"
                android:layout_alignParentBottom="true"
                android:gravity="center_horizontal"
                android:drawableTop="@drawable/indent"
                android:button="@null"
                android:textColor="@drawable/textcolor"
                />
    <RadioButton
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="个人"
        android:gravity="center_horizontal"
        android:id="@+id/personal"
        android:button="@null"
        android:layout_toRightOf="@+id/indent"
        android:drawableTop="@drawable/personal"
        android:textColor="@drawable/textcolor"
        />
    <RadioButton
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="更多!"
        android:gravity="center_horizontal"
        android:id="@+id/more"
        android:button="@null"
        android:layout_toRightOf="@+id/personal"
        android:drawableTop="@drawable/more"
        android:textColor="@drawable/textcolor"
        />
    </RadioGroup>
    <FrameLayout
        add:layout_widthPercent="100%"
        add:layout_heightPercent="90%"
        android:id="@+id/fragme"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"></FrameLayout>
</android.support.percent.PercentRelativeLayout>
